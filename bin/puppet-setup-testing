#! /bin/bash
#
# JJM 2010-07-01
# This script should setup everything required for
# Performance testing.
#
# It assumes puppet-demotools in /demo/puppet-demotools
# It creates everything in /opt/puppetlabs
#

set -u
set -e

/demo/puppet-demotools/bin/puppet-runtime -v \
    --modulepath=/demo/puppet-demotools/modules \
    /demo/puppet-demotools/manifests/setup-puppet-testing.pp $*
