#! /bin/bash
set -u
set -u

base="/demo/puppet-demotools"

export PATH="${base}/bin:${PATH:-/bin:/usr/bin:/sbin:/usr/sbin}"
export RUBYLIB="${base}/lib:${RUBYLIB:-}"

exec puppetmasterd \
    --modulepath="${base}"/modules/proj:"${base}"/modules/dist:/etc/puppet/modules:/usr/share/modules\
    $@

# EOF
