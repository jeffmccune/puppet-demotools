# Hostname:                     %{g}%H%{-}
# Windows before current:       %?%-Lw%?
# Current Window:               %{c}(%{W}%n%f %t%{-})%{-}
# Windows after current:        %?%+Lw%?
# xterm hardstatus              %= %{d}%?%{C}[%{W}%h%{-}] %?

# caption string "%{= Kd} %{g}%H%{-} %?%-Lw%?%{c}(%{W}%n%f %t%{-})%{-}%?%+Lw%?%= %{d}%?%{C}[%{W}%h%{-}] %?"
caption always "%{= bW} %{Y}%H%{-} %?%-Lw%?%{M}{%{Y}%n%f %{-}%{C}%t%{-}}%{-}%?%+Lw%?%= %{d}%?%{C}[%{W}%t %h%{-}] %?"
